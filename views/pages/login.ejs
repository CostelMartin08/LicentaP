    <body class="mt-5 bg-night vh-100">

        <main class="justify-content-center row pt-5 mx-auto">

            <form class="col-9 col-md-4 p-lg-5" method="post" action="/login">

                <img class="mb-4" src="images/melt.jpg" alt="logo"  width="100" />
                <h1 class="h3 mb-3 drk-color">Please sign in</h1>
                <p class="text-danger"></p>

                <div class="mb-3">
                    <label class="drk-color" for="floatingPassword">Username</label>
                    <input type="text" class="form-control" name="username" id="id" autocomplete="username" required
                        autofocus placeholder="Username" />
                </div>

                <div class="mb-3">
                    <label class="drk-color" for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password"
                        autocomplete="current-password" required placeholder="Password" />

                </div>

                <button type="submit" style="background-color: #051108; border:#051108" class="btn btn-success w-100 py-2 ">Sign in</button>
                <a href="./"  class="btn btn-outline-danger w-100 py-2 mt-3">Continue offline</a>
                <p class="mt-3 mb-3 text-white">Â©2023</p>

            </form>

        </main>


        <script src="/index.js"></script>

    </body>


