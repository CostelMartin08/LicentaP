<%- include('../partials/header.ejs', { includeLayouts: includeLayouts[0] }); -%>

    <body class="main-layout ">


        <script>
            const { handleDeleteRequest } = require('./deleteHandler');

            document.getElementById('deleteButton').addEventListener('click', () => {
                handleDeleteRequest();
            });

        </script>


        <!-- loader  -->
        <div class="loader_bg">
            <div class="loader"><img src="images/loading.gif" alt="#" /></div>
        </div>
        <!-- end loader -->

        <section class="slider_section">
            <div id="myCarousel" class="carousel slide banner-main" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="first-slide" src="images/4.png" alt="First slide">
                        <div class="container">
                            <div class="carousel-caption relative">
                                <span>Vinyl-uri de colectie </span>
                                <h1>O varietate de genuri valabile</h1>
                                <p>Vinyl Shop va pune la dispozitie o varietate de vinyl-uri de colectie
                                    <br> pentru iubitorii muzicii bune
                                </p>

                                <!--
                            <ul class="social_icon">
                                <li> <a href="#"><i class="fa fa-facebook-f"></i></a></li>
                                <li> <a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li> <a href="#"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                            -->
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="second-slide" src="images/4.png" alt="Second slide">
                        <div class="container">
                            <div class="carousel-caption relative">
                                <span>VinylShop </span>
                                <h1>Vezi reducerile disponibile si nu rata cele mai bune preturi</h1>
                                <!--
                            <ul class="social_icon">
                                <li> <a href="#"><i class="fa fa-facebook-f"></i></a></li>
                                <li> <a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li> <a href="#"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        -->
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <i class='fa fa-angle-left'></i>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <i class='fa fa-angle-right'></i>
                </a>
            </div>
        </section>

        <!-- about -->
        <div class="about">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-5 col-md-5 co-sm-l2">
                        <div class="about_img">
                            <figure><img src="images/melt.jpg" alt="img" /></figure>
                        </div>
                    </div>
                    <div class="col-xl-7 col-lg-7 col-md-7 co-sm-l2">
                        <div class="about_box">
                            <h3>Despre noi, Vinyl Shop</h3>
                            <span>Scurta prezentare</span>
                            <p>Suntem un magazin online de viniluri unde poti gasi albumele celor mai reprezentativi
                                artisti
                                din istorie. Stim ca si tu iubesti arta, asa ca suntem siguri ca magazinul nostru este
                                locul
                                perfect pentru a descoperi cea mai buna muzica!</p>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end about -->

        <!-- brand -->
        <div class="brand">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="titlepage">
                            <h2>Viniluri disponibile</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="brand-bg">
                <div class="container">
                    <div class="row">

                        <% result.forEach(function(item) { %>

                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 margin">
                                <div class="brand_box">
                                    <% if(item.stock){ %>

                                        <img src="images/<%= item.image %>" alt="img" />

                                        <%}else{%>

                                            <img class="opacity" src="images/<%= item.image %>" alt="img" />

                                            <%}%>
                                                <h1 class="cntr"> <span>
                                                        <%=item.artist %>
                                                    </span> </h1>
                                                <h1 class="cntr"> <span>
                                                        <%=item.nume %>
                                                    </span> </h1>

                                                <% if(item.reducere){ %>

                                                    <h1 class="cntr" style="text-decoration:line-through">Lei

                                                        <strong class="red">
                                                            <%= item.pret %>
                                                        </strong>
                                                    </h1>
                                                    <h1 class="cntr"> Lei <strong class="red">
                                                            <%= item.reducere %>
                                                        </strong></h1>

                                                    <%} else{ %>
                                                        <h1 class="cntr"> Lei <strong class="red">
                                                                <%= item.pret %>
                                                            </strong></h1>
                                                        <% } %>

                                                            <form class="cntr" action="/cos" method="post">
                                                                <input type="hidden" name="id" value="<%= item.id %>">
                                                                
                                                                <input type="hidden" name="artist"
                                                                    value="<%= item.artist %>">
                                                                <input type="hidden" name="nume"
                                                                    value="<%= item.nume %>">
                                                                <input type="hidden" name="pret"
                                                                    value="<%= item.pret %>">
                                                                <input type="hidden" name="reducere"
                                                                    value="<%= item.reducere %>">
                                                                <input type="hidden" name="cantitate" value='1'>
                                                                <input type="hidden" name="image"
                                                                    value="<%=item.image%>">

                                                                <% if(item.stock){ %>
                                                                    <input type="submit" value="Adauga in cos"
                                                                        class="btn btn-primary">

                                                                    <% }else{ %>
                                                                        <input disabled type="submit"
                                                                            value="Stoc Epuizat"
                                                                            class="btn btn-primary">
                                                                        <% } %>
                                                            </form>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>

        <!-- end brand -->
        <!-- clients -->
        <div class="clients">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="titlepage">
                            <h2>Ce spun clientii nostri</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clients_red">
            <div class="container">
                <div id="testimonial_slider" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#testimonial_slider" data-slide-to="0" class=""></li>
                        <li data-target="#testimonial_slider" data-slide-to="1" class="active"></li>
                        <li data-target="#testimonial_slider" data-slide-to="2" class=""></li>
                    </ul>
                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item">
                            <div class="testomonial_section">
                                <div class="full center">
                                </div>
                                <div class="full testimonial_cont text_align_center cross_layout">
                                    <div class="cross_inner">
                                        <h3>Review<br><strong class="ornage_color">Daniel</strong></h3>
                                        <p>Ce imi place la Vinyl Shop este ca in momentul in care coletul este trimis la
                                            posta sau ridicat de curier, se primeste o notificare pe e-mail.
                                            In plus, se poate verifica pe mail statusul comenzii respective.
                                            Daca statusul este "finalizata" inseamna ca pachetul a fost trimis si
                                            comanda nu
                                            mai poate fi modificata sau anulata.</i>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="carousel-item active">

                            <div class="testomonial_section">
                                <div class="full center">
                                </div>
                                <div class="full testimonial_cont text_align_center cross_layout">
                                    <div class="cross_inner">
                                        <h3>Review<br><strong class="ornage_color">Alexa</strong></h3>
                                        <p>Legat de livrare, e super fain ca cei de la Vinyl Shop au mai multe metode de
                                            livrare cum ar fi:
                                            prin curier rapid, Posta Romana sau ridicare personala de la sediu. Keep it
                                            up!!!
                                            </i>
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="carousel-item">

                            <div class="testomonial_section">
                                <div class="full center">
                                </div>
                                <div class="full testimonial_cont text_align_center cross_layout">
                                    <div class="cross_inner">
                                        <h3>Review<br><strong class="ornage_color">Cristi</strong></h3>
                                        <p>Am comandat de la cei de la Vinyl Shop o data. Au intarziat cu comanda doua
                                            saptamani.
                                            Nu recomand avand in vedere timpul mare de asteptare pentru livrari in afara
                                            orasului Iasi
                                            </i>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>
        <!-- end clients -->
        <!-- contact -->
        <div id="review_link">
            <div class="contact">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="titlepage">
                                <h2>Lasa si tu un review!</h2>
                            </div>
                            <form name="review" class="main_form" action="https://formsubmit.co/davidgiza5@gmail.com"
                                onsubmit="return validare()" method="POST">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                        <input class="form-control" placeholder="Nume" type="text" name="Your_Name"
                                            required>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                        <input class="form-control" placeholder="Email" type="text" name="Email"
                                            required>
                                    </div>
                                    <div class="col-md-12">
                                        <input class="form-control" placeholder="Mesaj" type="text" name="Mesaj"
                                            required>
                                    </div>
                                    <div class=" col-md-12">

                                        <button class="send">Trimite review</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end contact -->

        <!-- footer -->

        <!-- end footer -->
        <!-- Javascript files-->
        <script src="js/jquery.min.js"></script>
        <script src="js/popper.min.js"></script>
        <script src="js/bootstrap.bundle.min.js"></script>
        <script src="js/jquery-3.0.0.min.js"></script>
        <script src="js/plugin.js"></script>
        <!-- sidebar -->
        <script src="js/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="js/custom.js"></script>
        <!-- javascript -->
        <script src="js/owl.carousel.js"></script>
        <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
        <script>
            $(document).ready(function () {
                $(".fancybox").fancybox({
                    openEffect: "none",
                    closeEffect: "none"
                });

                $(".zoom").hover(function () {

                    $(this).addClass('transition');
                }, function () {

                    $(this).removeClass('transition');
                });
            });
        </script>

    </body>


    <%- include('../partials/footer.ejs', { includeLayouts: includeLayouts[0] }); -%>